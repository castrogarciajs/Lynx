{
  "imports": {
    "deps/": "./deps/",
    "packages/": "https://deno.land/x/"
  },
  "tasks": {
    "dev": "deno run -A --watch ./src/main.ts"
  },
  "lint": {
    "include": ["src/*", "deps/*"],
    "exclude": ["doc"],
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "singleQuote": true,
    "semiColons": false
  },
  "lock": false
}
